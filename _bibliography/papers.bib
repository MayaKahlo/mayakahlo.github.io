  booktitle = {Proceedings of the 2024 CHI Conference on Human Factors in Computing Systems},
  articleno = {384},
  numpages = {19},
  keywords = {crowd work, freelancers, gig work, job market, labor market, sousveillance *Both authors contributed equally to this research., surveillance},
  location = {Honolulu, HI, USA},
  selected={true},
  series = {CHI '24}
}
