  numpages = {3},
  keywords = {AI labor, Latin American and Caribbean women, crowd-work, gig work, wearable technology},
  location = {Cancun, Quintana Roo, Mexico},
  selected={true},
  series = {UbiComp/ISWC '23 Adjunct}
}

